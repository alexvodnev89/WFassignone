<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><span class="attr"><%= user.firstName %></span></td>
        <td><span class="attr"><%= user.lastName %></span></td>
        <td><span class="attr"><%= user.email %></span></td>
        <td><span class="attr"><%= user.admin %></span></td>
        <td><span class="attr"><%= user.created_at %></span></td>
        <td><span class="attr"><%= user.updated_at %></span></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

